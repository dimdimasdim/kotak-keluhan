<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="id.co.dimas.android.firebaserealtimedb.SplashActivity">

    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="@dimen/icon_size_medium_256dp"
        android:layout_height="@dimen/icon_size_medium_300dp"
        android:src="@drawable/suara"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_below="@+id/iv_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="KOTAK SUARA FIK"
        android:textColor="#fff"
        android:textStyle="bold|italic"
        android:textSize="@dimen/text_material_large"/>

</RelativeLayout>
